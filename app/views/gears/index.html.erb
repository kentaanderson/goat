<table width="100%">
  <tr>
    <td align=left><h3>Gear list (authorized)</h3></td>
    <td align=right><h1><%= link_to "Add Item", new_gear_path %></h1></td>
  </tr>
</table>

<table class=ex1 width="100%">
	<th align=left>Name</th>
  <th align=left>Manufacturer</th>
	<th align=left>Description</th>
	<th align=left>Weight&nbsp;(oz)</th>
  <th align=left>Year&nbsp;Acquired</th>
<% @gears.each do |gear| %>
  <tr>
  	<td width="30%"><%= link_to gear.name, edit_gear_path(gear) %></td>
    <td width="20%"><%= gear.manufacturer %></td>
  	<td width="30%"><%= gear.description %></td>
  	<td width="10%"><%= gear.weight_oz %></td>
    <td width="10%"><%= gear.year_acquired %></td>
  </tr>
<% end %>
</table>