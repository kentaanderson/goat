<script language=javascript>
  function toggle(source) {
    checkboxes = document.getElementsByName('gear_id[]');
    for(var i=0, n=checkboxes.length;i<n;i++) {
      checkboxes[i].checked = source.checked;
    }
  }
</script>

<style type="text/css">
    .bs-example{
      margin: 20px;
    }
</style>
<!-- end toggle menu add -->
</head> 

<body>
