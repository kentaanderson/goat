      <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
          <li><%= link_to current_user.email, edit_user_registration_path %></li>
          <li><%= link_to "Log Out", destroy_user_session_path, :method => :delete %></li>
      <%else%>
          <li><%= link_to "Log In", user_session_path %></li>
      <%end%>
      </ul>
    </div>
  </div>
</nav>

