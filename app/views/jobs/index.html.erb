<h1>RailsBridgeCorp Open Jobs</h1>

<table width="100%">
  <tr>
    <td align=left><h3>Jobs list (authorized)</h3></td>
    <td align=right><h1><%= link_to "Add Job", new_job_path %></h1></td>
  </tr>
</table>

<table class=ex1>
	<th></th>
	<th align=left>Posting</th>
	<th align=left>Description</th>
<% @jobs.each do |job| %>
  <tr>
  	<td width="10%"><%= link_to 'X', job, method: :delete, data: { confirm: 'Are you sure you want to delete this posting?' }  %></td>
  	<td width="45%"><%=  link_to job.title, edit_job_path(job) %></td>
  	<td width="45%"><%= job.description %></td>
  </tr>
<% end %>
</table>
