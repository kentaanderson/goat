<h1>Virtual Pack</h1>
<table class=table>
  <thead>
  <th align=left>Name</th>
  <th align=left>Event</th>
  <th align=left>Date range</th>
  <th align=left>Summary</th>
  </thead>
  <tr>
    <td width="25%"><%= @pack.name%></td>
    <td width="25%"><%= pack_event(@pack.event_id) %></td>
    <td width="25%">8/12/2016 - 8/15/2016</td>
    <td width="25%"><%= @pack.summary %></td>
  </tr>
</table>
<table class=table>
  <thead>
  <th align=left>Weight</th>
  <th align=left>details</th>
  <th align=left>here</th>
  </thead>
  <tr>
    <td width="25%">total pack weight</td>
    <td width="25%">5780 grams</td>
    <td width="25%">40.0 lbs</td>
  </tr>
  <tr>
    <td width="25%">worn weight</td>
    <td width="25%">780 grams</td>
    <td width="25%">4.0 lbs</td>
  </tr>
  <tr>
    <td width="25%">delivery weight</td>
    <td width="25%">0 grams</td>
    <td width="25%">0 lbs</td>
  </tr>
</table>

<div class="bs-example">
    <div class="panel-group" id="accordion">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Shelter</a>
                </h4>
            </div>
            <div id="collapseOne" class="panel-collapse collapse in">
                <div class="panel-body">
                    <table class=table>
						<th>Item</th>
						<th>Description</th>
						<th>Weight&nbsp;(oz)</th>
						<% @pack_items.each do |item| %>
						  <tr style="background-color:<%= cycle('#EEE', '#FFF') -%>">
						   	<td><%= item.name %></td>
						  	<td><%= item.description %></td>
						  	<td><%= item.weight_oz %></td>
						  </tr>
		              <% end %>
					</table>
                </div>
            </div>
        </div>
   </div>
</div>
</body>

