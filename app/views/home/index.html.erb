<% @packs.each do |pack|%>
  <% if pack.name.to_s.length > 0 then %>
  <tr style="background-color:<%= cycle('#EEE', '#FFF') -%>">
    <td align=left><li><%= link_to pack.name, request.base_url + virtual_pack_path + "?vp=" + pack.id.to_s %></td>
    <td><%= pack.summary %></td>
  </tr>
  <% end %>
<% end %>
